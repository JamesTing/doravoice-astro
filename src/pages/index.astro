import PlatformWebpage from "/src/assets/platform-webpage.svg";
import AmymindScreenshot from "/src/assets/amymind-screenshot.png";
import PasteText from "/src/assets/paste-text.png";
import OneIdea from "/src/assets/one-idea.png";
import ImportFile from "/src/assets/import-file.png";
import Star from "/src/assets/star.png";
