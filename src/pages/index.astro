<style>
	#hero {
		transform: perspective(600px) rotateX(25deg) translateY(-60px);
	}
	#hero:hover {
		transform: rotateX(0deg) translateY(0px);
	}
	#product-sologan {
		font-size: 3.25rem;
		font-weight: 700;
		line-height: 3.75rem;
		margin: 0 0 4px;
		position: relative;
		word-break: keep-all;
		/* 字体横向间距 */
		letter-spacing: -0.02em;
		text-align: center;
	}
	@keyframes slide {
		0%,
		20% {
			top: 0;
		}
		30% {
			top: -3.75rem;
		}
		40% {
			top: -7.5rem;
		}
		60% {
			top: -7.5rem;
		}
		90% {
			top: -7.5rem;
		}
	}

	.ticker {
		display: inline-flex;
		height: 3.75rem;
		overflow: hidden;
		flex-direction: column;
	}
	.ticker > span {
		position: relative;
		top: 0;
		text-align: left;
		animation: slide 7s infinite;
		/* 文字渐变背景色 */
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	.ticker span.ppt {
		/* 渐变文字背景色 */
		background: linear-gradient(180deg, #bc3f1f 50%, #ffb29d 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	.ticker span.md {
		/* 渐变文字背景色 */
		background: linear-gradient(180deg, #000 50%, #d6d6d6 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	.ticker span.doc {
		/* 渐变文字背景色 */
		background: linear-gradient(180deg, #195ad4 50%, #9dd5ff 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	.ticker span.pdf {
		/* 渐变文字背景色 */
