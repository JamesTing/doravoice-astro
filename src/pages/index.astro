---
import { Image } from "astro:assets";
import {
	getLangFromUrl,
	useTranslations,
	useTranslatedPath,
} from "../i18n/utils";

import ScreenshotHero from "/src/assets/screenshot-hero.png";
import { Icon } from "astro-icon/components";
import Logo from "/src/assets/logo.png";
import LogoText from "/src/assets/logo-text.png";
import LogoTextSlim from "/src/assets/logo-text-slim.png";
import DownloadBadgeAppStore from "/src/assets/download-badge-app-store.svg";
import DownloadBadgeGooglePlay from "/src/assets/download-badge-google-play.png";

import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);
---

<Layout
	title="DoraVoice - AI Transcription and Translation"
	description="DoraVoice is a free AI app for effortless transcription and translation."
	keywords="transcription, translation, AI, artificial intelligence, transcription and translation"
>
	<!-- Head -->
	<div class="pt-8 bg-gray-100">
		<!-- navbar -->
		<Navbar />
		<!-- Hero -->
		<div class="max-w-[900px] mx-auto mt-4 flex space-x-8 justify-between">
			<div class="pt-28 pl-8">
				<Image
					src={Logo}
					id="glow-button"
					class="rounded-xl w-10 shadow-lg mb-1 ml-1"
					alt="DoraVoice"
				/>
				<div class="text-black mb-8 text-5xl font-bold tracking-tight">
					Tune into content <br /> in your native tongue
				</div>
				<div class="text-gray-500 text-lg mb-8">
					Listen to podcasts and webpages in your native tongue,
					without the need for a translator.
				</div>
				<!-- Download Badges -->
				<div class="flex space-x-4">
					<Image
						src={DownloadBadgeAppStore}
						alt="Download Badge App Store"
						class="w-36 hover:shadow-lg transition-all cursor-pointer"
					/>
					<Image
						src={DownloadBadgeGooglePlay}
						alt="Download Badge Google Play"
						class="w-36 hover:shadow-lg transition-all cursor-pointer hidden"
					/>
				</div>
			</div>
			<div class="max-w-96 h-[500px] overflow-hidden">
				<Image
					id="hero"
					class="w-full"
					src={ScreenshotHero}
					alt="DoraVoice Screenshot"
				/>
			</div>
		</div>
	</div>

	<!-- Features -->
	<div
		class="pt-16 flex flex-col mb-20 items-center bg-gradient-to-b from-gray-50 to-white to-10%"
	>
		<h2 class="text-3xl font-medium text-center tracking-tighter">
			Transcription, Translation, and Reading
		</h2>
		<div class="pb-8 text-gray-600 text-lg">
			Listen to podcasts and webpages in your native tongue, without the
			need for a translator.
		</div>
		<div class="flex justify-between max-w-[900px] rounded-xl gap-x-4">
			<div class="p-3 rounded-xl bg-gray-50">
				<Icon
					name="fluent:translate-auto-16-regular"
					color="black"
					size={28}
				/>
				<h3 class="font-medium text-normal leading-none my-2">
					Language Transcription
				</h3>
				<div>
					<p class="text-gray-500 text-sm">
						Accurately transcribe foreign language content into text
						for easy editing and saving.
					</p>
				</div>
			</div>
			<div class="p-3 rounded-xl bg-gray-50">
				<Icon
					name="fluent:text-bullet-list-square-edit-20-regular"
					size={28}
					color="black"
				/>
				<h3 class="font-medium text-normal leading-none my-2">
					Intelligent Translation
				</h3>
				<div>
					<p class="text-gray-500 text-sm">
						Supports multilingual translation to help users easily
						understand foreign content.
					</p>
				</div>
			</div>
			<div class="p-3 rounded-xl bg-gray-50">
				<Icon
					name="fluent:keyboard-16-regular"
					size={28}
					color="black"
				/>
				<h3 class="font-medium text-normal leading-none my-2">
					Natural Reading
				</h3>
				<div>
					<p class="text-gray-500 text-sm">
						Read translated content with natural and fluent speech,
						enhancing the auditory experience.
					</p>
				</div>
			</div>
			<div class="p-3 rounded-xl bg-gray-50">
				<Icon
					name="fluent:balloon-16-regular"
					size={28}
					color="black"
				/>
				<h3 class="font-medium text-normal leading-none my-2">
					Offline Mode
				</h3>
				<div>
					<p class="text-gray-500 text-sm">
						Access transcription and translation features without an
						internet connection for convenience on the go.
					</p>
				</div>
			</div>
		</div>
	</div>
</Layout>

<Footer />

<style>
	#glow-button {
		color: #fff;
		background: #111;
		cursor: pointer;
		position: relative;
		z-index: 0;
	}

	#glow-button:before {
		content: "";
		background: linear-gradient(
			45deg,
			#ff0000,
			#ff7300,
			#fffb00,
			#48ff00,
			#00ffd5,
			#002bff,
			#7a00ff,
			#ff00c8,
			#ff0000
		);
		position: absolute;
		top: -2px;
		left: -2px;
		background-size: 400%;
		z-index: -1;
		filter: blur(20px);
		width: calc(100% + 4px);
		height: calc(80% + 4px);
		animation: glowing 20s linear infinite;
		opacity: 0.3;
		transition: opacity 0.28s ease-in-out;
		border-radius: 20px;
	}

	#glow-button:active {
		/* color: #000 */
	}

	#glow-button:active:after {
		background: transparent;
	}

	#glow-button:hover {
		transition: all 0.16s ease-in-out;
		transform: translateY(-2px) scale(1.01);
	}
	#glow-button .arrow {
		display: inline-block;
		transition: all 0.16s ease-in-out;
		transform: translateX(0px);
	}
	#glow-button:hover .arrow {
		transform: translateX(8px);
	}
	#glow-button:hover:before {
		opacity: 1;
	}

	#glow-button:after {
		z-index: -1;
		content: "";
		position: absolute;
		width: 100%;
		height: 100%;
		background: #111;
		left: 0;
		top: 0;
		border-radius: 20px;
	}

	@keyframes glowing {
		0% {
			background-position: 0 0;
		}
		50% {
			background-position: 400% 0;
		}
		100% {
			background-position: 0 0;
		}
	}
</style>
