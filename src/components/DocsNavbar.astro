---
import { Image } from "astro:assets";

import LanguagePicker from "./LanguagePicker.astro";
import LogoText from "/src/assets/logo-text.png";
---

<div
	class="shadow-sm h-12 fixed z-10 w-full shadow-black/5 border-black/10 border-b backdrop-blur p-2 bg-white/50 flex items-center text-neutral-700"
>
	<div class="flex-grow flex items-center space-x-8">
		<a href="/">
			<Image src={LogoText} class="w-28" alt="DoraVoice" /></a
		</a>
		<div class="flex-1 items-center space-x-4">
			<a
				class="rounded-md transition-all px-2 py-1.5 hover:bg-neutral-200 hover:text-black"
				href="/user-guide">User Guide</a
			>
		</div>
	</div>
	<div>
		<LanguagePicker />
	</div>
</div>
