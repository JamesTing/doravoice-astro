---
import { Image } from "astro:assets";
import MindmapAI from "/src/assets/mindmap-ai.svg";
import MindmapImport from "/src/assets/mindmap-import.svg";
import MindmapExport from "/src/assets/mindmap-export.svg";
import ScreenshotChat from "/src/assets/screenshot-chat.png";
import FileMarkdown from "/src/assets/file-markdown.svg";
import MindmapShape from "/src/assets/mindmap-shape.svg";
import FileFreemind from "/src/assets/file-freemind.svg";
import FileWebpage from "/src/assets/file-webpage.svg";
import FileImage from "/src/assets/file-image.svg";
import FileText from "/src/assets/file-text.svg";
import ScreenshotImport from "/src/assets/screenshot-import.png";
import ScreenshotExport from "/src/assets/screenshot-export.png";
import FilePPT from "/src/assets/file-ppt.svg";
import FileWord from "/src/assets/file-word.svg";
import FilePDF from "/src/assets/file-pdf.svg";
---

<div id="feature-list" class="flex space-x-4">
	<div id="tab" class="w-2/5 flex flex-col space-y-2">
		<div
			class="flex bg-neutral-100 rounded-xl py-3 px-2 items-start space-x-2 actived"
			data-target="#feature-ai"
		>
			<Image
				class="w-14 flex-shrink-0"
				src={MindmapAI}
				alt="Inspiration at Your Fingertips"
			/>
			<div>
				<div class="font-bold leading-none mb-2">
					With AI, Craft Mind Maps from an Idea!
				</div>
				<div class="text-sm text-neutral-500">
					Unleash your creativity and clarify your thoughts. Our
					product uses the power of Artificial Intelligence to convert
					your simple idea into a comprehensive mind map.
				</div>
			</div>
		</div>
		<div
			class="flex rounded-xl py-3 px-2 items-start space-x-2"
			data-target="#feature-import"
		>
			<Image
				class="w-14 flex-shrink-0"
				src={MindmapImport}
				alt="Import with Ease"
			/>
			<div>
				<div class="font-bold leading-none mb-2">
					Documents to Mind Maps, Instantly!
				</div>
				<div class="text-sm text-neutral-500">
					Turn markdown, txt, freemind into clear, organized mind
					maps. Say goodbye to clutter, hello to clarity with our
					innovative feature. Simplify, visualize, create!
				</div>
			</div>
		</div>
		<div
			class="flex rounded-xl py-3 px-2 items-start space-x-2"
			data-target="#feature-export"
		>
			<Image
				class="w-14 flex-shrink-0"
				src={MindmapExport}
				alt="Workflow Integration"
			/>
			<div>
				<div class="font-bold leading-none mb-2">
					Export Easier, Power with AI!
				</div>
				<div class="text-sm text-neutral-500">
					Now export in PowerPoint, PDF, or Word formats for easy
					edits and seamless workflow transitions.
				</div>
			</div>
		</div>
	</div>

	<div id="content" class="w-3/5">
		<!-- AI feature card -->
		<div
			id="feature-ai"
			class="block relative h-96 shadow-xl shadow-fuchsia-800/15 overflow-hidden bg-neutral-100 rounded-xl feature-import medium-shadow bg-gradient-to-br from-pink-400/50 to-purple-600/50"
		>
			<Image
				class="rounded-xl w-11/12 opacity-80 absolute -left-1 -top-4"
				style="mask-image:linear-gradient(270deg, black 0%, transparent 90%),linear-gradient(0deg, black 0%, transparent 90%)"
				src={ScreenshotChat}
				alt="Screenshot - AI chat generate mindmap"
			/>
			<Image
				class="opacity-20 absolute left-4 top-24"
				style="mask-image:linear-gradient(90deg, black 0%, transparent 90%)"
				src={MindmapShape}
				alt="Mindmap diagram"
			/>
		</div>
		<!-- import file card -->
		<div
			id="feature-import"
			class="hidden relative h-96 shadow-xl shadow-green-800/15 overflow-hidden bg-neutral-100 rounded-xl feature-import medium-shadow bg-gradient-to-br from-green-500/50 to-green-500/10"
		>
			<div
				class="absolute left-1/2 top-6 -translate-x-1/2 flex space-x-4"
			>
				<Image
					class="rounded-lg shadow-lg py-4 px-3 bg-gradient-to-b from-white/90 to-white/60"
					src={FileMarkdown}
					alt="markdown"
				/>
				<Image
					class="rounded-lg shadow-lg py-4 px-3 bg-gradient-to-b from-white/90 to-white/60"
					src={FileFreemind}
					alt="freemind"
				/>
				<Image
					class="rounded-lg shadow-lg py-4 px-3 bg-gradient-to-b from-white/90 to-white/60"
					src={FileWebpage}
					alt="webpage"
				/>
				<Image
					class="rounded-lg shadow-lg py-4 px-3 bg-gradient-to-b from-white/90 to-white/60"
					src={FileText}
					alt="text"
				/>
			</div>
			<Image
				class="rounded-xl w-4/5 opacity-80 absolute left-1/2 top-28 -translate-x-1/2"
				style="mask-image:linear-gradient(180deg, black 0%, transparent 90%)"
				src={ScreenshotImport}
				alt="Screenshot - Supported file formats for import"
			/>
			<Image
				class="opacity-20 absolute left-20 top-48 scale-90"
				style="mask-image:linear-gradient(90deg, black 0%, transparent 90%)"
				src={MindmapShape}
				alt="Mindmap diagram"
			/>
		</div>
		<!-- export file card -->
		<div
			id="feature-export"
			class="hidden relative h-96 shadow-xl shadow-orange-800/15 overflow-hidden bg-neutral-100 rounded-xl feature-import medium-shadow bg-gradient-to-br from-orange-400/50 to-yellow-400/50"
		>
			<Image
				class="rounded-xl w-4/5 opacity-80 absolute -left-16 top-8"
				style="mask-image:linear-gradient(180deg, black 0%, transparent 90%)"
				src={ScreenshotExport}
				alt="Screenshot - Supported file formats for export"
			/>
			<Image
				class="opacity-20 absolute left-4 top-40 scale-90"
				style="mask-image:linear-gradient(90deg, black 0%, transparent 90%)"
				src={MindmapShape}
				alt="Mindmap diagram"
			/>
			<div
				class="absolute right-2 top-1/2 -translate-y-1/2 flex w-1/4 flex-wrap"
			>
				<Image
					class="mb-4 mr-4 rounded-lg shadow-lg py-4 px-3 bg-gradient-to-b from-white/90 to-white/60"
					src={FilePPT}
					alt="PowerPoint"
				/>
				<Image
					class="mb-4 mr-4 rounded-lg shadow-lg py-4 px-3 bg-gradient-to-b from-white/90 to-white/60"
					src={FileWord}
					alt="Word"
				/>
				<Image
					class="mb-4 mr-4 rounded-lg shadow-lg py-4 px-3 bg-gradient-to-b from-white/90 to-white/60"
					src={FileMarkdown}
					alt="Markdown"
				/>
				<Image
					class="mb-4 mr-4 rounded-lg shadow-lg py-4 px-3 bg-gradient-to-b from-white/90 to-white/60"
					src={FilePDF}
					alt="PDF"
				/>
				<Image
					class="mb-4 mr-4 rounded-lg shadow-lg py-4 px-3 bg-gradient-to-b from-white/90 to-white/60"
					src={FileText}
					alt="Text"
				/>
				<Image
					class="mb-4 mr-4 rounded-lg shadow-lg py-4 px-3 bg-gradient-to-b from-white/90 to-white/60"
					src={FileImage}
					alt="Image"
				/>
			</div>
		</div>
	</div>
</div>
<style>
	#tab .actived: {
		display: block;
	}
</style>
