const docs = await Astro.glob("/src/pages/user-guide/*.md");
docs.sort((a, b) => {
	if (a.frontmatter.pubDate < b.frontmatter.pubDate) {
		return -1;
	}
	if (a.frontmatter.pubDate > b.frontmatter.pubDate) {
