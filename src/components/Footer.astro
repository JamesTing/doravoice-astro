---
import { Image } from "astro:assets";
import Logo from "/src/assets/logo.svg";
import LanguagePicker from "../components/LanguagePicker.astro";
import {
	getLangFromUrl,
	useTranslations,
	useTranslatedPath,
} from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);
const t = useTranslations(lang);
---

<div class="mx-auto max-w-5xl mb-12 px-2 text-sm">
	<div
		class="border-t border-gray-100 pt-8 pb-4 text-gray-400 flex justify-between"
	>
		<div class="w-56">
			<Image src={Logo} class="opacity-60" alt="AmyMind" />
			<div class="mt-4">AI Mind Map for Your Thinking</div>
			<div class="">Â© AmyMind 2024</div>
		</div>
		<div>
			<div class="leading-none font-medium text-base text-gray-500 mb-3">
				Navigator
			</div>

			<div class="mb-2 hover:text-gray-800 transition duration-300">
				<a href={translatePath("/user-guide")}>{t("nav.user-guide")}</a>
			</div>
			<div class="mb-2 hover:text-gray-800 transition duration-300">
				<a href={translatePath("/#features")}>{t("nav.features")}</a>
			</div>
			<div class="mb-2 hover:text-gray-800 transition duration-300">
				<a href={translatePath("/#pricing")}>{t("nav.pricing")}</a>
			</div>
			<!-- <div class="mb-2 hover:text-gray-800 transition duration-300">
				<a href={translatePath("/#mindmap")}>{t("nav.mindmap")}</a>
			</div>
			<div class="mb-2 hover:text-gray-800 transition duration-300">
				<a href={translatePath("/#whiteboard")}>{t("nav.whiteboard")}</a>
			</div> -->
