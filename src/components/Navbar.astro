---
import { Image } from "astro:assets";
import Logo from "/src/assets/logo.svg";
---

<div
	class="mx-auto max-w-5xl rounded-xl shadow-xl shadow-black/5 border-black/10 border backdrop-blur p-2 bg-white/50 flex items-center text-neutral-700"
>
	<div class="flex-grow flex items-center space-x-8">
		<a href="/">
			<Image src={Logo} class="relative top-0.5" alt="AmyMindçš„logo" />
		</a>
		<div class="flex-1 items-center space-x-4">
			<a
				class="rounded-md transition-all px-2 py-1.5 hover:bg-neutral-200 hover:text-black"
				href="/#mindmap">Mindmap</a
			>
			<a
				class="rounded-md transition-all px-2 py-1.5 hover:bg-neutral-200 hover:text-black"
				href="/#whiteboard">Whiteboard</a
			>
			<a
				class="rounded-md transition-all px-2 py-1.5 hover:bg-neutral-200 hover:text-black"
				href="/#pricing">Pricing</a
			>
			<a
				class="rounded-md transition-all px-2 py-1.5 hover:bg-neutral-200 hover:text-black"
				href="/user-guide">User Guide</a
			>
		</div>
	</div>
	<div class="space-x-2 text-sm">
		<a
			class="rounded-md py-1.5 px-2 hover:bg-neutral-200"
			href="https://app.amymind.com/account/login">Log In</a
		>
		<a
			class="bg-black rounded-md py-1.5 px-2 text-white hover:shadow-lg"
			href="https://app.amymind.com/account/signup">Sign Up</a
		>
	</div>
</div>
<style></style>
<script>
	document.cookie.split(";").forEach((item) => {
		const [key, value] = item.split("=");
		if (key.trim() === "profile") {
			const profile = JSON.parse(decodeURIComponent(value));
			if (profile) {
				// window.location.href = "http://localhost:3000/";
				window.location.href = "https://app.amymind.com/";
			}
		}
	});
</script>
